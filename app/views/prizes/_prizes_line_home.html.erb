<% if @featured.blank? %>
	<p>No prizes just yet!</p>
<% else %>
<ul>
	<% @featured.each do |p| %>
		<%= link_to controller: :prizes, action: :show, id: p.id do %>
		<li>
		<img src="<%= p.get_first_image %>" class = "featured-image">
		<p><b><%= p.name %></b></p>
		</li>
	<% end end %>
</ul>
<% end %>